/var/log/kannel/testing/bearerbox.log
{
    daily
    size 120M
    rotate 3
    compress
    olddir /var/log/archive/gw
    createolddir 644 root root
    dateext
    dateformat _%Y%m%d
    dateyesterday
    missingok
    notifempty
    extension .log
    postrotate
        /bin/systemctl reload bearerbox
    endscript
}

/var/log/kannel/testing/access/*.log {
    daily
    size 120M
    rotate 14
    compress
    copytruncate
    olddir /var/log/archive/gw/access
    createolddir 664 kannel root
    dateext
    dateformat _%Y%m%d
    dateyesterday
    missingok
    notifempty
    extension .log
    sharedscripts
    postrotate
        /bin/systemctl reload bearerbox
    endscript
}

